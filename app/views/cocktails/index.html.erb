<div class="banner" style="background-image: linear-gradient(-225deg, rgba(161, 134, 158, 0.6) 0%, rgba(182, 166, 202,0.6) 50%), url('<%= %>');">
  <div class="banner-content">
    <h1>On va s'exploser la tronche</h1>
    <h4>Always drink with moderationüç∫</h4>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-secondary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card my-2">
          <div class="card-description">
            <ul>
              <li> <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2> </li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
